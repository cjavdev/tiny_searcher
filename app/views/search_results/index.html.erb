<div class="container">
  <h1>Tiny Searcher</h1>
  <div class="col-md-9">
    <form action="/" class="form">
      <div class="form-group">
        <input type="text" name="query" class="form-control" value="<%= params[:query] %>">
      </div>
      <input type="submit" class="btn btn-default pull-right" value="Search">
    </form>

    <% if !@results.empty? %>
      <ul>
        <% @results.each do |result| %>
          <li><%= link_to result.to_s, result %></li>
        <% end %>
      </ul>
    <% elsif params[:query] %>
      No results found.
    <% end %>
  </div>
  <div class="col-md-3">
    <%= render partial: "guide" %>
  </div>
</div>
